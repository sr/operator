<!DOCTYPE html>
<html>
<head>
  <title>Pardot Explorer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css', media: 'all' %>
  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag %>
</head>
<body>
  <header class="navbar navbar-default navbar-fixed-top" role="banner">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/" class="navbar-brand"><%= image_tag "logo.png", alt: "Pardot", class:" img-responsive logo"%></a>
      <%= image_tag "explorer_logo.png", class: "explorer_logo" %>
      <span class="title"></span>
      <ul class="nav navbar-nav navbar-right">
      <li class="build_version"><%= Rails.application.config.x.build_version %></li>
      </ul>
      <% if current_user %>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to sessions_path, data: {method: "delete"} do %>
              <i class="icon-signout" title="logout"></i>
            <%- end %>
          </li>
        </ul>
      <% end %>
    </div>
  </header>
  <aside role="navigation">
    <nav>
      <ul class="nav nav-stacked">
        <li class="li-label"><span>Database</span></li>
        <li>
          <a href="/queries/new"><i class="fa fa-globe"></i>Global</a>
        </li>
        <li>
          <a href="/accounts"><i class="fa fa-cloud"></i>Account</a>
        </li>
        <li class="newsection">
          <%= link_to "Audit Log", audit_log_url %>
        </li>
      </ul>
    </nav>
  </aside>

  <div class="main">
    <%= yield %>
  </div>
</body>
</html>
